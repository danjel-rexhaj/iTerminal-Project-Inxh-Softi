@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - iTerminal</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/iTerminal.styles.css" asp-append-version="true" />
</head>

<body>
  <header>
    @if (@HttpContextAccessor.HttpContext.Session.GetInt32("AdminId") != null)
    {
      @await Html.PartialAsync("_AdminNav")
    }
    else
    {
            <nav class="navbar">
                <div class="container-fluid">
                    <a class="navbarr-brand navbarlogo" asp-area="" asp-controller="Home" asp-action="Index">iTerminal</a>
                    <button class="navbar-toggler" type="button">
                    </button>
                    <div class="navbarr-collapse">
                        <ul class="navbarr-nav no-print">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home"></i>
                                </a>
                            </li>
                            @if (@HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="UpComingTrips">
                                        <i class="fas fa-bus"></i>
                                    </a>
                                </li>
                                @if (@HttpContextAccessor.HttpContext.Session.GetInt32("Messages") != null)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MyNotifications">
                                            <i class="fas fa-bell text-primary">
                                            </i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="MyNotifications">
                                            <i class="fas fa-bell"></i>
                                        </a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link  logoutButton"  asp-area="" asp-controller="Login" asp-action="LogOut">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="CompanyLogin" asp-controller="Login">
                                        <i class="fas fa-building"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Index" asp-controller="Login">
                                        <i class="fas fa-user"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

    }
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="footeri mt-5">
    <div class="footerat">
      <p>&copy; 2024 iTerminalInc. &middot;</p>
    </div>
    <div class="footerat">
      <p></p>
    </div>
  </footer>
  </main>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
