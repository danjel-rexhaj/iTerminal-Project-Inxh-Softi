@model TerminalLibrary.Models.Company

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Regjistrimi</title>
</head>

<body>
    <div class="regk">
        <div class="itemck">
            <h1 class="text-center">Regjistrimi i Kompanisë</h1>
            <form method="post" asp-action="CompanyRegister" asp-controller="Login">
                <div class="form-group">
                    <label asp-for="Name" class="text-white">Emri i Kompanisë</label>
                    <input asp-for="Name" class="form-control" id="exampleFormControlInput1">
                    <span asp-validation-for="Name" class="text-danger font-italic mb-3"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="text-white">Email</label>
                    <input asp-for="Email" class="form-control" id="exampleFormControlInput1">
                    <span asp-validation-for="Email" class="text-danger font-italic mb-3"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="text-white">Fjalëkalimi</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="Password" class="text-danger font-italic mb-3"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pwconfirm" class="text-white">Konfirmo Fjalëkalimin</label>
                    <input asp-for="Pwconfirm" type="password" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="Pwconfirm" class="text-danger font-italic mb-3"></span>
                </div>
                <button type="submit" class="mt-4 btn btn-info text-white w-100 p-3">Regjistrohu</button>
            </form>
        </div>
    </div>
</body>

</html>
