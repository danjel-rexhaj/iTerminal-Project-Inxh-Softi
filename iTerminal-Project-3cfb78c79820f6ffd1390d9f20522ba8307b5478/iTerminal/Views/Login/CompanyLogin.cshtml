@model TerminalLibrary.Models.CompanyLogin

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div class="loginf">
        <div class="itemsf">
            <h1 class="text-center">Identifikohu si Kompani</h1>

            <form asp-action="CompanyLogin" method="post" asp-controller="Login">
                <div class="form-group">
                    <label asp-for="LEmail" class="text-white">Email</label>
                    <input asp-for="LEmail" class="form-control" id="exampleFormControlInput1">
                    <span asp-validation-for="LEmail" class="text-danger font-italic mb-3"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LPassword" class="text-white">Fjalëkalimi</label>
                    <input asp-for="LPassword" type="password" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="LPassword" class="text-danger font-italic mb-3"></span>
                </div>
                <button type="submit" class="mt-4 btn btn-info text-white w-100 p-3">Identifikohu</button>
            </form>
            <a asp-action="CompReg" asp-controller="Login" class="mt-4 btn btn-outline-success w-100 p-3">Regjistrohu</a>
        </div>
    </div>
</body>

</html>
