@model TerminalLibrary.Models.DataTwo
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<div class="text-center">
    <h2 class="mt-4">Ndrysho njësinë e shërbimit!</h2>
</div>

<form asp-action="UpdateUnit" method="post" enctype="multipart/form-data" asp-controller="Admin" asp-route-id="@Model.Unit.UnitId">

    <div class="form-group">
        <label asp-for="@Model.Unit.Name" class="text-white">Emri</label>
        <input asp-for="@Model.Unit.Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="@Model.Unit.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Unit.Price" class="text-white">Çmimi</label>
        <input asp-for="@Model.Unit.Price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" min="1">
        <span asp-validation-for="@Model.Unit.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Unit.Seats" class="text-white">Vendet</label>
        <input asp-for="@Model.Unit.Seats" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" min="1">
        <span asp-validation-for="@Model.Unit.Seats" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Unit.Nisja" class="text-white">Nisja</label>
        <input asp-for="@Model.Unit.Nisja" class="form-control" type="datetime-local" id="exampleInputEmail1" aria-describedby="emailHelp">
        <span asp-validation-for="@Model.Unit.Nisja" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Unit.Description" class="text-white">Përshkrimi</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" asp-for="@Model.Unit.Description"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Unit.ImageFile" class="control-label text-white">Ngarko Imazhin</label>
        <input asp-for="@Model.Unit.ImageFile" class="form-control e" type="file">
        <span asp-validation-for="@Model.Unit.ImageFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-white">Shto Një Kategori</label>
        <select class="form-control" asp-for="@Model.Unit.RouteId">
            @foreach (var item in @Model.Routes)
            {
                <option value="@item.RouteId">@item.PointA - @item.PointB</option>
            }
        </select>
    </div>
    <input type="hidden" asp-for="@Model.Unit.CreatorId" value="@HttpContextAccessor.HttpContext.Session.GetInt32("AdminId")">
    <input type="submit" value="Ndrysho" class="mt-4 btn btn-success w-100 p-3">

</form>
